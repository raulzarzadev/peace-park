{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "inputs/*": [
        "components/inputs/*"
      ],
      "comps/*": [
        "components/*"
      ],
      "@firebase/*": [
        "firebase/*"
      ],
      "@comps/*": [
        "components/*"
      ],
      "@/*": [
        "./*"
      ],
      "@hooks": [
        "hooks/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/CurrencySpan.js",
    "hooks/*.js"
  ]
}